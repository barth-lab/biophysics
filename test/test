#set -e
cd `dirname $0`

ediff() {
   diff -q - $1 $2 1>&2 
}

for f in input/*.pdb;do
	name=${f#input/}
	name=${name%.pdb}

	../src/copy.d $f | ediff output/${name}_copy.pdb 
	../src/renumber.d $f | ediff output/${name}_renumber.pdb 
	../src/renumber.d -s 10 $f | ediff output/${name}_renumber_10.pdb 

done
